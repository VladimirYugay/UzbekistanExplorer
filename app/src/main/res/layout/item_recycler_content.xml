<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="360.0dip"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_background_white"
    android:minHeight="360.0dip"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="210.0dip"
        android:layout_weight="1.0"
        android:minHeight="210.0dip">

        <ImageView
            android:src="@drawable/drag_and_drop_shop_background_image"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:contentDescription="This is image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="24.0dip"
            android:layout_marginLeft="24.0dip"
            android:background="@android:color/transparent"
            android:text="Best tours"
            android:textColor="@android:color/white"
            android:textSize="24.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:background="@drawable/google_cards_background_bottom"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginTop="16.0dip"
            android:text="Eat at Joe"
            android:textColor="@color/material_blue_grey_300"
            android:textSize="24.0sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:gravity="left"
            android:maxLines="3"
            android:text="Very long long long saldkaskfjds;lgjfsdklgdfsl;kgj"
            android:textColor="@color/material_blue_grey_700"
            android:textSize="14.0sp"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left">

            <Button
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>